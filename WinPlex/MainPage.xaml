<Page
    x:Class="WinPlex.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinPlex"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Margin="100">
        <TextBlock Text="WinPlex" Margin="25"/>
        <TextBlock Text="Se connecter" Margin="25"/>
        <TextBlock Text="Clé API"/>
        <TextBox x:Name="api" PlaceholderText="Clé API"/>
        <Button Margin="25" Click="Button_Click">Connexion</Button>
    </StackPanel>
</Page>
